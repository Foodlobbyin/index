# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=foodlobbyin
DB_USER=postgres
DB_PASSWORD=password

# Backend API Configuration
PORT=5000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Email Configuration (for email verification, password reset, and OTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@foodlobbyin.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:5000/api

# reCAPTCHA Configuration (for bot protection)
# Get your keys from https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_THRESHOLD=0.5

# OTP Configuration
OTP_EXPIRY_MINUTES=10
MAX_OTP_GENERATION_PER_HOUR=5
MAX_OTP_VERIFICATION_ATTEMPTS=5

# pgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
